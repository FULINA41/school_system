<view class="container">
  <view class="header">
    <text class="title">常见问题</text>
  </view>
  <scroll-view class="content" scroll-y="true">
    <block wx:for="{{qaList}}" wx:key="index">
      <view class="qa-item">
        <view class="question">{{item.question}}</view>
        <view class="answer">{{item.answer}}</view>
      </view>
    </block>
  </scroll-view>
  <view class="feedback">
    <button class="helpful-btn" bindtap="onHelpful">有帮助</button>
    <button class="unhelpful-btn" bindtap="onUnhelpful">没帮助</button>
  </view>
</view>