.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 16px;
  background: linear-gradient(to bottom, #cde6c7, #8abca9);
}

.header {
  height: 50px;
  display: flex;
  align-items: center;
  background-color: #26886b;
  color: #fff;
}

.back-icon {
  width: 20px;
  height: 20px;
  margin-left: 10px;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 20px;
}

.content {
  flex: 1;
  padding: 10px;
}

.qa-item {
  margin-bottom: 20px;
  margin-right: 20px;
  background-color: #fff;
  border-radius: 5px;
  padding: 10px;
  box-shadow: 0 2px 4px rgba(0,0,0,.1);
}

.question {
  font-weight: bold;
  margin-bottom: 5px;
  color: #333;
}

.answer {
  line-height: 1.5;
  color: #666;
}

.feedback {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50px;
  background-color: #fff;
}

.helpful-btn {
  background-color: #2979ff;
  color: #fff;
  border-radius: 20px;
  padding: 5px 10px; /* 缩小按钮的宽度和高度 */
  margin-right: 10px; /* 缩小按钮之间的距离 */
  font-size: 14px; /* 调整按钮的字体大小 */
}

.unhelpful-btn {
  background-color: #f44336;
  color: #fff;
  border-radius: 20px;
  padding: 5px 10px; /* 缩小按钮的宽度和高度 */
  font-size: 14px; /* 调整按钮的字体大小 */
}