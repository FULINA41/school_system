.container {
  height: 725px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to bottom, #e7f37f, #e77224);
}

.form {
  width: 95%;
  height: 90%;
  max-width: 600px;
  padding: 20px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

.field {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.label {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}

.radio {
  font-size: 16px;
  color: #666;
  margin-bottom: 10px;
}

.input {
  height: 250px;
  padding: 10px;
  font-size: 16px;
  color: #333;
  background-color: #f7f7f7;
  border-radius: 5px;
  border: none;
  outline: none;
  resize: none;
}

.button {
  width: 120px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  color: #fff;
  background-color: #ff4081;
  border-radius: 5px;
  border: none;
  outline: none;
  margin-bottom: 10px;
}

.images {
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
}

.image {
  width: 80px;
  height: 80px;
  margin-right: 10px;
  margin-bottom: 10px;
  object-fit: cover;
  border-radius: 5px;
}

.submit {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  color: #fff;
  background-color: #ff4081;
  border-radius: 5px;
  border: none;
  outline: none;
  margin-top: 20px;
}