.container {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  perspective: 1000px;
  background: linear-gradient(to bottom, #cde6c7, #8abca9);
}

.card {
  width: 80%;
  max-width: 400px;
  height: 300px;
  margin: 50px;
  transform-style: preserve-3d;
  transform: rotateX(30deg) rotateY(-30deg);
  transition: transform 0.5s ease;
}

.card:hover {
  transform: rotateX(0deg) rotateY(0deg);
}

.content {
  position: relative;
  top:100px;
  left: -20px;
  width: 120%;
  height: 100%;
  transform-style: preserve-3d;
  transform: translateZ(50px);
  backface-visibility: hidden;
  padding: 20px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  text-align: center;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #ff4081;
  margin-bottom: 10px;
}

.subtitle {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.info {
  font-size: 16px;
  color: #666;
  line-height: 1.5;
}